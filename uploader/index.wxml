<view class="panel-upload i-class">
    <view wx:for="{{ imgList }}"
          wx:for-item="item"
          wx:for-index="index"
          wx:key="index"
          class="img-list flex-list common-bg"
          catchtap="previewImg" data-index="{{ index }}">
        <image src="{{item}}" style="width:{{imgWidth+'px'}};height:{{imgWidth+'px'}};"></image>
        <i-icon type="close" size='12' class="delete-file" wx:if="{{ showClose }}" catchtap="removeImg"
                data-index="{{ index }}"/>
    </view>
    <view class="add-file flex-list" style="width:{{imgWidth+'px'}};height:{{imgWidth+'px'}};" wx:if="{{count<total}}"
          catchtap="upLoad">
        <i-icon type="add" class="add-icon"/>
        <text class="color-999">添加 {{count}}/{{total}}</text>
    </view>
</view>
